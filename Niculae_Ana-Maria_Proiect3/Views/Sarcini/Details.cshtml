@model Niculae_Ana_Maria_Proiect3.Models.Sarcina

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Sarcina</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nume Sarcina:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumeSarcina)
        </dd>
        <dt class="col-sm-2">
            Descriere:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descriere)
        </dd>
        <dt class="col-sm-2">
            Data Incepere:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataIncepere)
        </dd>
        <dt class="col-sm-2">
            Data Finalizare:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataFinalizare)
        </dd>
        <dt class="col-sm-2">
            Status:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-2">
            Proiect Asociat:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProiectAsociat.Nume)
        </dd>
        <dt class="col-sm-2">
            Nume Manager:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProiectAsociat.ManagerProiect.Nume)
        </dd>
        <dt class="col-sm-2">
            Angajați:
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var member in Model.SarcinaMembriEchipa)
                {
                    <li>@member.MembruEchipa.Nume</li>
                }
            </ul>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.SarcinaId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<!-- Comentarii-->
<div class="container">
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-2">Utilizator</div>
        <div class="col-4"><input type="text" id="userInput" /></div>
    </div>
    <div class="row">
        <div class="col-2">Comentariu</div>
        <div class="col-4"><input type="text" id="messageInput" /></div>
    </div>
    <div class="row">&nbsp;</div>
    @* <div id="sarcinaIdElement" data-sarcina-id="@Model.SarcinaId"></div> *@
    <div class="col-4"><input type="text" id="sarcinaIdElement" /></div>

    <div class="row">
        <div class="col-6">
            <input type="button" id="sendButton" value="Send Message" />
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-6">
        <ul id="messagesList"></ul>
    </div>
</div>


<h3>Comentarii</h3>
<ul id="messagesList">
    @foreach (var comment in ViewBag.Comments as List<Niculae_Ana_Maria_Proiect3.Models.Comentariu>)
    {
        <li>@comment.Text - @comment.DataOra</li>
    }
</ul>


<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>
}

