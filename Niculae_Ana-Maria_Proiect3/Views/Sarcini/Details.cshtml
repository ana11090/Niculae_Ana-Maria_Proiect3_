@model Niculae_Ana_Maria_Proiect3.Models.Sarcina

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Sarcina</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nume Sarcina:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumeSarcina)
        </dd>
        <dt class="col-sm-2">
            Descriere:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descriere)
        </dd>
        <dt class="col-sm-2">
            Data Incepere:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataIncepere)
        </dd>
        <dt class="col-sm-2">
            Data Finalizare:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataFinalizare)
        </dd>
        <dt class="col-sm-2">
            Status:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-2">
            Proiect Asociat:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProiectAsociat.Nume)
        </dd>
        <dt class="col-sm-2">
            Nume Manager:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProiectAsociat.ManagerProiect.Nume)
        </dd>
