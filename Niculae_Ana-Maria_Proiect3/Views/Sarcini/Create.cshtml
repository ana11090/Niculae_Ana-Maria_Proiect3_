@model Niculae_Ana_Maria_Proiect3.Models.View.SarcinaViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Sarcina.NumeSarcina" class="control-label">Titlu sarcina</label>
                <input asp-for="Sarcina.NumeSarcina" class="form-control" />
                <span asp-validation-for="Sarcina.NumeSarcina" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sarcina.Descriere" class="control-label">Descriere</label>
                <input asp-for="Sarcina.Descriere" class="form-control" />
                <span asp-validation-for="Sarcina.Descriere" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sarcina.DataIncepere" class="control-label">Data incepere</label>
                <input asp-for="Sarcina.DataIncepere" type="date" class="form-control" />
                <span asp-validation-for="Sarcina.DataIncepere" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sarcina.DataFinalizare" class="control-label">Data finalizare</label>
                <input asp-for="Sarcina.DataFinalizare" type="date" class="form-control" />
                <span asp-validation-for="Sarcina.DataFinalizare" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sarcina.Status" class="control-label">Status</label>
                <select asp-for="Sarcina.Status" class="form-control" asp-items="Html.GetEnumSelectList<Niculae_Ana_Maria_Proiect3.Models.StatusSarcina>()"></select>
                <span asp-validation-for="Sarcina.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sarcina.ProiectId" class="control-label">Proiect</label>
                <select asp-for="Sarcina.ProiectId" class="form-control" asp-items="ViewBag.ProiectId"></select>
                <span asp-validation-for="Sarcina.ProiectId" class="text-danger"></span>
            </div>
            @for (int i = 0; i < Model.MembriiEchipa.Count; i++)
            {
                <div class="form-group">
                    <input asp-for="@Model.MembriiEchipa[i].IsSelected" type="checkbox" />
                    <input asp-for="@Model.MembriiEchipa[i].MembruEchipaId" type="hidden" />
                    @Model.MembriiEchipa[i].Nume
                </div>
            }


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
